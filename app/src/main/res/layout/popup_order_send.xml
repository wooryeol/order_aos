<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_round"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu01"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/color_1A1A1A"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="거래처 : 경주상사"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/color_1A1A1A"
        android:layout_marginBottom="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제방법 : 현금"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/color_1A1A1A"
        android:layout_marginBottom="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/accountName"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액 : 100,000원"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/color_1A1A1A"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/payment"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendingComment"
        android:textSize="16dp"
        android:layout_marginVertical="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/amount"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="@string/no"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/color_4C4F54"
            android:background="@drawable/bt_round_b1b4bb"
            tools:ignore="SpUsage" />

        <Button
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="@string/yes"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bt_round_1d6de5"
            tools:ignore="SpUsage" />

    </LinearLayout>


</RelativeLayout>