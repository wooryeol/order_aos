<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include
            android:id="@+id/header"
            layout="@layout/layout_header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_7E828B"
                        android:textStyle="normal"
                        android:text="@string/account"
                        android:textSize="15dp"/>

                    <RelativeLayout
                        android:id="@+id/accountArea"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/accountName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14dp"
                            android:background="@drawable/et_round_c9cbd0"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="12dp"
                            android:hint="@string/accountHint"
                            android:textColor="@color/color_1A1A1A"
                            tools:ignore="Autofill,SpUsage,TextFields" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/storeManaTitle"
                        android:textSize="14dp"
                        android:textColor="@color/color_7E828B"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:background="@drawable/et_round_c9cbd0"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="12dp"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:hint="@string/storeManaTitleHint"
                        tools:ignore="Autofill,SpUsage,TextFields" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/storeManaConstructor"
                        android:textSize="14dp"
                        android:textColor="@color/color_7E828B"
                        tools:ignore="SpUsage" />

                    <EditText
                        android:id="@+id/creator"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:background="@drawable/et_round_c9cbd0"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="12dp"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="text"
                        android:hint="@string/storeManaConstructorHint"
                        tools:ignore="Autofill,SpUsage,TextFields" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/color_DBDCDF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:text="@string/before"
                        android:textSize="14dp"
                        android:textColor="@color/color_7E828B"
                        tools:ignore="SpUsage" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/before"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14dp"
                            android:background="@drawable/et_round_c9cbd0"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="12dp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:hint="@string/msgHint"
                            tools:ignore="Autofill,SpUsage,TextFields" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/addImage01"
                        android:layout_width="87dp"
                        android:layout_height="40dp"
                        android:text="@string/addImage"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="@drawable/bt_round_103c7e"
                        tools:ignore="SpUsage" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/beforeImg"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/color_DBDCDF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/after"
                        android:textSize="14dp"
                        android:textColor="@color/color_7E828B"
                        tools:ignore="SpUsage" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical">
                        <EditText
                            android:id="@+id/after"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="14dp"
                            android:background="@drawable/et_round_c9cbd0"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="12dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:hint="@string/msgHint"
                            tools:ignore="Autofill,SpUsage,TextFields" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/addImage02"
                        android:layout_width="87dp"
                        android:layout_height="40dp"
                        android:text="@string/addImage"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:background="@drawable/bt_round_103c7e"
                        tools:ignore="SpUsage" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/afterImg"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_DBDCDF" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/bottom"
        layout="@layout/layout_bottom" />

</LinearLayout>