<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="6dp"
                android:text="@string/wma"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color_1A1A1A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/mobileVer"
                android:textSize="12dp"
                android:textStyle="normal"
                android:textColor="@color/color_1A1A1A"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables,UselessParent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_exit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/exit"
                android:textColor="@color/color_7E828B"
                android:textSize="14dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/settingBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="30dp"
            android:text="@string/setting"
            android:textColor="@color/color_103C7E"
            android:textStyle="bold"
            android:textSize="16dp"
            android:drawableStart="@drawable/ic_setting_blue"
            android:drawablePadding="6dp"
            android:background="@drawable/bt_round_b1b4bb"/>

        <Button
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:paddingHorizontal="30dp"
            android:text="@string/notice"
            android:textColor="@color/color_103C7E"
            android:textStyle="bold"
            android:textSize="16dp"
            android:drawableStart="@drawable/ic_notice"
            android:drawablePadding="6dp"
            android:background="@drawable/bt_round_b1b4bb"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="2dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        tools:ignore="RtlSymmetry" />

</LinearLayout>