<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingStart="16dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/orderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(34870) 하기스프리미어 3공 100/1"
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="@color/color_1A1A1A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOX(24EA): "
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_8A8F99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_1A1A1A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="닡개 : "
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_8A8F99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_1A1A1A"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="단가 : "
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_8A8F99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9,999,999원"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_1A1A1A"/>

        <ImageButton
            android:id="@+id/header_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_trash"
            android:background="@color/trans"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총수량 : "
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_8A8F99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="240"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_1D6DE5"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="합계금액 : "
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_8A8F99"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9,999,999,999원"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/color_1D6DE5"/>

        <View
            android:layout_width="60dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <View
        android:id="@+id/borderView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_DBDCDF"/>
</LinearLayout>