<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/ll_round_white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bigger_scanner"
            android:layout_marginBottom="12dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1A1A1A"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/deviceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1A1A1A"
            android:textSize="14dp"
            android:layout_marginVertical="10dp"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pairing"
                android:textColor="@color/color_1D6DE5"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/isPairing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/color_1D6DE5"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>