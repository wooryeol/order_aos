<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/ll_round_white"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/popupAddImageTitle"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color_1A1A1A"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/tvMsg02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/popupAddImage"
            android:textSize="16dp"
            android:gravity="center"
            tools:ignore="HardcodedText,SpUsage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/camera"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/camera"
                android:textColor="@color/color_1D6DE5"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/bt_round_border_1d6de5"
                tools:ignore="SpUsage" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/gallery"
                android:textColor="@color/color_1D6DE5"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/bt_round_border_1d6de5"
                tools:ignore="SpUsage" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>